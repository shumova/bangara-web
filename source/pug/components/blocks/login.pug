mixin login(props = {})
  .login
    .container
      .login__wrapper
        .login__img
          +picture({
            path: "content",
            name: "login",
            format: "jpg",
            width: "591",
            height: "578",
            altText: "Девушка за работой."
          })
        .login__content
          +logo({
            isIndex: false,
            img: {
              path: "content/logo",
              name: "logo",
              format: "png",
              width: "366",
              height: "127",
              altText: "Bangara"
            }
          })
          +login-form()
