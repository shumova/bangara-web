doctype html

include ../components

block variables

html.theme-default(lang="ru", class="no-scrollbar")
  head
    title= title
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    meta(name="description", content="ЦФР — IT решения для вашего бизнеса")
    //- генерация фавикона - https://realfavicongenerator.net/
    //- crossorigin="use-credentials" для site.webmanifest
    link(rel="apple-touch-icon" sizes="180x180" href="favicon/apple-touch-icon.png")
    link(rel="icon" type="image/png" sizes="32x32" href="favicon/favicon-32x32.png")
    link(rel="icon" type="image/png" sizes="16x16" href="favicon/favicon-16x16.png")
    link(rel="manifest" href="favicon/site.webmanifest" crossorigin="use-credentials")
    link(rel="mask-icon" href="favicon/safari-pinned-tab.svg" color="#5bbad5")
    link(rel="shortcut icon" href="favicon/favicon.ico")
    meta(name="msapplication-TileColor" content="#da532c")
    meta(name="msapplication-config" content="favicon/browserconfig.xml")
    meta(name="theme-color" content="#ffffff")

    //- для шрифта находящегося на первом экране
    link(rel="preload", href="fonts/inter-v13-cyrillic_latin-900.woff2", as="font", crossorigin="anonymous")
    link(rel="preload", href="fonts/inter-v13-cyrillic_latin-500.woff2", as="font", crossorigin="anonymous")
    link(rel="stylesheet", href="css/style.min.css")

  body
    .wrapper(class=wrapperMods)
      if (hasHeader)
        +header(headerMods, currentUrl)

      block main

      if (hasFooter)
        +footer(footerMods, currentUrl)

    block modals

    script(src="js/vendor.min.js")
    script(src="js/main.min.js")
